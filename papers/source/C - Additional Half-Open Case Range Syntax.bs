constexpr int hi = 50; 

int main () {
	switch (n) {
		case hi...lo-1: // mistake: no constraint violation
			f(n);
		break;
	}
	switch (n) {
		case hi..<lo: // mistake: constraint violation
			f(n);
		break;
	}
	return 0;
}
